<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:baselineAligned="false"
              android:orientation="horizontal"
              android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/keyline_default">

        <include layout="@layout/recyclerview_row_label"/>

        <org.hisp.dhis.client.sdk.ui.views.FontEditText
            android:id="@+id/row_date_picker_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/enter_date"
            android:includeFontPadding="false"
            android:inputType="datetime"
            android:maxLines="1"
            android:textSize="@dimen/text_size_large"
            app:font="@string/font_name_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <org.hisp.dhis.client.sdk.ui.views.RaisedButton
                android:id="@+id/row_date_picker_button_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_date"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_medium"
                app:font="@string/font_name_condensed"/>

            <org.hisp.dhis.client.sdk.ui.views.RaisedButton
                android:id="@+id/row_date_picker_button_pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pick_date"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_medium"
                app:font="@string/font_name_condensed"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/recyclerview_row_divider_vertical"/>

    <include layout="@layout/recyclerview_row_button_cancel"/>

</LinearLayout>